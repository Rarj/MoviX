<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CircleImage" parent="">
        <item name="shapeAppearance">@style/ShapeAppearanceOverlay.App.circleImageView</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.circleImageView" parent="">
        <item name="cornerSize">50%</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="PosterImage" parent="">
        <item name="shapeAppearance">@style/ShapeAppearanceOverlay.App.posterImageView</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.posterImageView" parent="">
        <item name="cornerSize">5%</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="BottomSheetDialogRoundedEdge" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_rounded_shape</item>
    </style>

    <style name="ToolbarTitleAppearance">
        <item name="android:fontFamily">@font/sono_extrabold</item>
        <item name="android:textSize">28sp</item>
    </style>

    <style name="ToolbarSubTitleAppearance">
        <item name="android:fontFamily">@font/sono_regular</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>
